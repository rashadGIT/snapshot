# Database
DATABASE_URL="postgresql://snapspot:snapspot_dev_password@localhost:5432/snapspot_dev"

# AWS Cognito Configuration
# Create a Cognito User Pool with Google federation and Hosted UI enabled
COGNITO_REGION="us-east-1"
COGNITO_USER_POOL_ID="us-east-1_XXXXXXXXX"
COGNITO_CLIENT_ID="your-app-client-id"
COGNITO_DOMAIN="your-app-domain.auth.us-east-1.amazoncognito.com"
NEXT_PUBLIC_COGNITO_DOMAIN="your-app-domain.auth.us-east-1.amazoncognito.com"

# JWT Verification
# Format: https://cognito-idp.{REGION}.amazonaws.com/{USER_POOL_ID}
COGNITO_ISSUER="https://cognito-idp.us-east-1.amazonaws.com/us-east-1_XXXXXXXXX"

# OAuth Redirect URIs (must match Cognito app client settings)
NEXT_PUBLIC_APP_URL="http://localhost:3000"
COGNITO_REDIRECT_URI="http://localhost:3000/api/auth/callback"
COGNITO_LOGOUT_URI="http://localhost:3000"

# AWS S3 Configuration (LocalStack for local dev)
AWS_REGION="us-east-1"
AWS_S3_BUCKET="snapspot-uploads"
AWS_ACCESS_KEY_ID="test" # LocalStack dummy credentials
AWS_SECRET_ACCESS_KEY="test" # LocalStack dummy credentials
AWS_ENDPOINT_URL="http://localhost:4566" # LocalStack endpoint
# For production, remove AWS_ENDPOINT_URL and use real AWS credentials

# Application Secrets
# Generate with: openssl rand -base64 32
QR_TOKEN_SECRET="your-secret-key-for-qr-token-generation-change-in-production"

# Node Environment
NODE_ENV="development"
